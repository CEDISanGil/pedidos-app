            <form id="inventarioForm">
                <div class="form-group">
                    <label for="buscadorProducto">üîç Buscar Producto (por SKU o Nombre):</label>
                    <div id="loadingMsg" style="color: #fbbc04; padding: 10px; text-align: center; display: none;">
                        ‚è≥ Cargando productos desde base de datos...
                    </div>
                    <input type="text" 
                           id="buscadorProducto" 
                           placeholder="Cargando productos..."
                           autocomplete="off"
                           disabled>
                    <div id="resultadosBusqueda" class="resultados-busqueda"></div>
                </div>
                
                <div class="form-group hidden" id="productoSeleccionadoDiv">
                    <label>‚úÖ Producto Seleccionado:</label>
                    <div id="productoSeleccionadoInfo" class="producto-seleccionado"></div>
                    <input type="hidden" id="productoSeleccionadoData">
                </div>

                <div class="form-group">
                    <label for="cantidad">üìä Cantidad:</label>
