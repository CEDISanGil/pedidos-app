    <script>
        const SUPABASE_URL = 'https://etxtmdljkxdaonyldcmn.supabase.co';
        const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImV0eHRtZGxqa3hkYW9ueWxkY21uIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjM0NDE1OTAsImV4cCI6MjA3OTAxNzU5MH0.SII1FIsgyuSv1oI1_xJs_MOUvYxNTnJsBEXigbZsosk';
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        // Variable global que se llenar√° desde Supabase
        let productos = [];

        // Cargar productos desde Supabase
        async function cargarProductosDesdeSupabase() {
            try {
                const loadingMsg = document.getElementById('loadingMsg');
                if (loadingMsg) loadingMsg.style.display = 'block';

                const { data, error } = await supabase
                    .from('productos')
                    .select('sku, nombre')
                    .eq('activo', true)
                    .order('sku');

                if (error) throw error;

                productos = data || [];
                console.log(`‚úÖ ${productos.length} productos cargados desde Supabase`);

                if (loadingMsg) loadingMsg.style.display = 'none';
                
                // Habilitar el buscador
                const buscador = document.getElementById('buscadorProducto');
                if (buscador) {
                    buscador.disabled = false;
                    buscador.placeholder = `Buscar SKU o producto (${productos.length} productos disponibles)`;
                }

            } catch (error) {
                console.error('‚ùå Error cargando productos:', error);
                alert('Error al cargar productos. Por favor recarga la p√°gina.');
            }
        }

        // Array embebido de respaldo (por si falla Supabase) - ELIMINADO
        // Se elimin√≥ el array hardcodeado [

        let tipoSeleccionado = null;
        let registrosHoy = [];
        let editandoId = null;
        let productoSeleccionado = null;

        // Inicializar
        document.addEventListener('DOMContentLoaded', async function() {
            // Primero cargar productos desde Supabase
            await cargarProductosDesdeSupabase();
            
            setupBuscador();
            setupTipoButtons();
            cargarRegistros();
            cargarVerificaciones();
            setupFormSubmit();
            
            // Auto-actualizar cada 30 segundos
            setInterval(() => {
                cargarRegistros();
                cargarVerificaciones();
            }, 30000);

            // Verificar limpieza autom√°tica
            verificarLimpiezaAutomatica();
        });

        function setupBuscador() {
            const buscador = document.getElementById('buscadorProducto');
            const resultados = document.getElementById('resultadosBusqueda');
            
            buscador.addEventListener('input', function() {
                const busqueda = this.value.trim().toLowerCase();
                
                if (busqueda.length === 0) {
                    resultados.classList.remove('active');
                    resultados.innerHTML = '';
                    return;
                }

                // Filtrar productos por SKU o nombre
                const productosFiltrados = productos.filter(p => 
                    p.sku.toLowerCase().includes(busqueda) || 
                    p.nombre.toLowerCase().includes(busqueda)
                ).slice(0, 10); // Mostrar m√°ximo 10 resultados

                if (productosFiltrados.length === 0) {
                    resultados.innerHTML = '<div style="padding: 15px; text-align: center; color: #666;">No se encontraron productos</div>';
                    resultados.classList.add('active');
                    return;
                }

                // Mostrar resultados
                resultados.innerHTML = productosFiltrados.map(p => `
                    <div class="resultado-item" data-producto='${JSON.stringify(p)}'>
                        <span class="resultado-sku">${p.sku}</span>
                        <span class="resultado-nombre">${p.nombre}</span>
                    </div>
                `).join('');
                
                resultados.classList.add('active');

                // Agregar eventos a los resultados
                document.querySelectorAll('.resultado-item').forEach(item => {
                    item.addEventListener('click', function() {
                        const producto = JSON.parse(this.dataset.producto);
                        seleccionarProducto(producto);
                    });
                });
            });

            // Cerrar resultados al hacer clic fuera
            document.addEventListener('click', function(e) {
                if (!buscador.contains(e.target) && !resultados.contains(e.target)) {
                    resultados.classList.remove('active');
                }
            });
        }

        function seleccionarProducto(producto) {
            productoSeleccionado = producto;
            
            // Limpiar buscador
            document.getElementById('buscadorProducto').value = '';
            document.getElementById('resultadosBusqueda').classList.remove('active');
            
            // Mostrar producto seleccionado
            document.getElementById('productoSeleccionadoDiv').classList.remove('hidden');
            document.getElementById('productoSeleccionadoInfo').innerHTML = `
                <span class="sku">${producto.sku}</span>
                <span class="nombre">${producto.nombre}</span>
            `;
            document.getElementById('productoSeleccionadoData').value = JSON.stringify(producto);
            
            // Enfocar el campo de cantidad
            document.getElementById('cantidad').focus();
        }

        function setupTipoButtons() {
            document.querySelectorAll('.tipo-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.tipo-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    tipoSeleccionado = this.dataset.tipo;
                    document.getElementById('tipoSeleccionado').value = tipoSeleccionado;
                });
            });
        }

        function setupFormSubmit() {
            document.getElementById('inventarioForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                if (!productoSeleccionado) {
                    mostrarAlerta('Por favor selecciona un producto', 'error');
                    return;
                }

                const cantidad = parseInt(document.getElementById('cantidad').value);
                const tipo = parseInt(tipoSeleccionado);

                if (!tipo) {
                    mostrarAlerta('Por favor selecciona el tipo (Caja o Botella)', 'error');
                    return;
                }

                try {
                    if (editandoId) {
                        // Actualizar registro existente
                        const { error } = await supabase
                            .from('inventario_diario')
                            .update({
                                sku: productoSeleccionado.sku,
                                producto: productoSeleccionado.nombre,
                                cantidad: cantidad,
                                tipo: tipo
                            })
                            .eq('id', editandoId);

                        if (error) throw error;
                        mostrarAlerta('‚úÖ Registro actualizado correctamente', 'success');
                        editandoId = null;
                        document.getElementById('btnAgregar').textContent = '‚ûï Agregar al Inventario';
                    } else {
                        // Insertar nuevo registro
                        const { error } = await supabase
                            .from('inventario_diario')
                            .insert([{
                                sku: productoSeleccionado.sku,
                                producto: productoSeleccionado.nombre,
                                cantidad: cantidad,
                                tipo: tipo
                            }]);

                        if (error) throw error;
                        mostrarAlerta('‚úÖ Producto agregado al inventario', 'success');
                    }

                    // Limpiar formulario
                    limpiarFormulario();
                    
                    // Recargar lista
                    cargarRegistros();
                } catch (error) {
                    console.error('Error:', error);
                    mostrarAlerta('‚ùå Error al guardar: ' + error.message, 'error');
                }
            });
        }

        function limpiarFormulario() {
            document.getElementById('inventarioForm').reset();
            document.querySelectorAll('.tipo-btn').forEach(b => b.classList.remove('active'));
            tipoSeleccionado = null;
            productoSeleccionado = null;
            document.getElementById('productoSeleccionadoDiv').classList.add('hidden');
            document.getElementById('buscadorProducto').focus();
        }

        async function cargarRegistros() {
            try {
                const hoy = new Date().toISOString().split('T')[0];
                
                const { data, error } = await supabase
                    .from('inventario_diario')
                    .select('*')
                    .eq('fecha', hoy)
                    .order('created_at', { ascending: false });

                if (error) throw error;

                registrosHoy = data || [];
                mostrarRegistros();
                actualizarEstadisticas();
            } catch (error) {
                console.error('Error al cargar registros:', error);
            }
        }

        function mostrarRegistros() {
            const lista = document.getElementById('registrosList');
            
            if (registrosHoy.length === 0) {
                lista.innerHTML = '<p style="text-align: center; color: #666; padding: 20px;">No hay registros para hoy</p>';
                return;
            }

            lista.innerHTML = registrosHoy.map(registro => `
                <div class="registro-item">
                    <div class="registro-info">
                        <strong>${registro.sku}</strong> - ${registro.producto}<br>
                        <span style="color: #fbbc04;">Cantidad: ${registro.cantidad}</span> | 
                        <span style="color: ${registro.tipo === 1 ? '#4caf50' : '#2196f3'}">${registro.tipo === 1 ? 'üü¢ Caja' : 'üîµ Botella'}</span>
                    </div>
                    <div class="registro-actions">
                        <button class="btn-small btn-edit" onclick="editarRegistro(${registro.id})">‚úèÔ∏è Editar</button>
                        <button class="btn-small btn-delete" onclick="eliminarRegistro(${registro.id})">üóëÔ∏è</button>
                    </div>
                </div>
            `).join('');
        }

        function actualizarEstadisticas() {
            document.getElementById('totalRegistros').textContent = registrosHoy.length;
            
            const totalCajas = registrosHoy
                .filter(r => r.tipo === 1)
                .reduce((sum, r) => sum + r.cantidad, 0);
            
            document.getElementById('totalCajas').textContent = totalCajas;
        }

        window.editarRegistro = async function(id) {
            const registro = registrosHoy.find(r => r.id === id);
            if (!registro) return;

            editandoId = id;
            
            // Seleccionar el producto
            productoSeleccionado = {
                sku: registro.sku,
                nombre: registro.producto
            };
            
            // Mostrar producto seleccionado
            document.getElementById('productoSeleccionadoDiv').classList.remove('hidden');
            document.getElementById('productoSeleccionadoInfo').innerHTML = `
                <span class="sku">${productoSeleccionado.sku}</span>
                <span class="nombre">${productoSeleccionado.nombre}</span>
            `;
            document.getElementById('productoSeleccionadoData').value = JSON.stringify(productoSeleccionado);
            
            // Pre-llenar cantidad
            document.getElementById('cantidad').value = registro.cantidad;
            
            // Activar bot√≥n de tipo
            document.querySelectorAll('.tipo-btn').forEach(btn => {
                if (parseInt(btn.dataset.tipo) === registro.tipo) {
                    btn.classList.add('active');
                    tipoSeleccionado = btn.dataset.tipo;
                    document.getElementById('tipoSeleccionado').value = tipoSeleccionado;
                }
            });

            document.getElementById('btnAgregar').textContent = 'üíæ Actualizar Registro';
            window.scrollTo({ top: 0, behavior: 'smooth' });
            mostrarAlerta('üìù Editando registro - Modifica y guarda', 'info');
        };

        window.eliminarRegistro = async function(id) {
            if (!confirm('¬øEst√°s seguro de eliminar este registro?')) return;

            try {
                const { error } = await supabase
                    .from('inventario_diario')
                    .delete()
                    .eq('id', id);

                if (error) throw error;

                mostrarAlerta('üóëÔ∏è Registro eliminado', 'success');
                cargarRegistros();
            } catch (error) {
                console.error('Error:', error);
                mostrarAlerta('‚ùå Error al eliminar', 'error');
            }
        };

        async function cargarVerificaciones() {
            try {
                const hoy = new Date().toISOString().split('T')[0];
                
                const { data, error } = await supabase
                    .from('diferencias_inventario')
                    .select('*')
                    .eq('fecha', hoy)
                    .eq('verificado', false);

                if (error) throw error;

                if (!data || data.length === 0) {
                    document.getElementById('verificacionesSection').style.display = 'none';
                    return;
                }

                document.getElementById('verificacionesSection').style.display = 'block';
                mostrarVerificaciones(data);
            } catch (error) {
                console.error('Error al cargar verificaciones:', error);
            }
        }

        function mostrarVerificaciones(diferencias) {
            const lista = document.getElementById('verificacionesList');
            
            lista.innerHTML = diferencias.map(dif => `
                <div class="verificacion-item">
                    <h3 style="color: #fbbc04; margin-bottom: 15px;">${dif.sku} - ${dif.producto}</h3>
                    
                    <div class="verificacion-header">
                        <div class="verificacion-col">
                            <label>üìä Sistema</label>
                            <span>${dif.cantidad_sistema}</span>
                        </div>
                        <div class="verificacion-col">
                            <label>üì¶ Contado</label>
                            <span>${dif.cantidad_fisica}</span>
                        </div>
                        <div class="verificacion-col">
                            <label>‚ö†Ô∏è Diferencia</label>
                            <span style="color: ${dif.cantidad_fisica - dif.cantidad_sistema >= 0 ? '#4caf50' : '#ff6b6b'}">
                                ${dif.cantidad_fisica - dif.cantidad_sistema > 0 ? '+' : ''}${dif.cantidad_fisica - dif.cantidad_sistema}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="cantidad_correcta_${dif.id}">‚úÖ Cantidad Correcta:</label>
                        <input type="number" id="cantidad_correcta_${dif.id}" min="0" 
                               placeholder="Ingresa la cantidad correcta despu√©s de verificar"
                               style="margin-bottom: 10px;">
                    </div>

                    <button class="btn btn-primary" onclick="guardarVerificacion(${dif.id})">
                        üíæ Guardar Verificaci√≥n
                    </button>
                </div>
            `).join('');
        }

        window.guardarVerificacion = async function(diferenciaId) {
            const cantidadInput = document.getElementById(`cantidad_correcta_${diferenciaId}`);
            const cantidadCorrecta = parseInt(cantidadInput.value);

            if (isNaN(cantidadCorrecta) || cantidadCorrecta < 0) {
                mostrarAlerta('Por favor ingresa una cantidad v√°lida', 'error');
                return;
            }

            try {
                // Guardar verificaci√≥n
                const { error: errorVerif } = await supabase
                    .from('verificaciones_inventario')
                    .insert([{
                        diferencia_id: diferenciaId,
                        cantidad_correcta: cantidadCorrecta
                    }]);

                if (errorVerif) throw errorVerif;

                // Marcar diferencia como verificada
                const { error: errorDif } = await supabase
                    .from('diferencias_inventario')
                    .update({ verificado: true })
                    .eq('id', diferenciaId);

                if (errorDif) throw errorDif;

                mostrarAlerta('‚úÖ Verificaci√≥n guardada correctamente', 'success');
                cargarVerificaciones();
            } catch (error) {
                console.error('Error:', error);
                mostrarAlerta('‚ùå Error al guardar verificaci√≥n: ' + error.message, 'error');
            }
        };

        function mostrarAlerta(mensaje, tipo) {
            const container = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${tipo}`;
            alert.textContent = mensaje;
            container.innerHTML = '';
            container.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }

        async function verificarLimpiezaAutomatica() {
            const ahora = new Date();
            const hora = ahora.getHours();
            const minutos = ahora.getMinutes();
            
            // Limpiar a las 23:59
            if (hora === 23 && minutos === 59) {
                await limpiarDatosAntiguos();
            }
            
            // Verificar cada minuto
            setTimeout(verificarLimpiezaAutomatica, 60000);
        }

        async function limpiarDatosAntiguos() {
            try {
                const hoy = new Date().toISOString().split('T')[0];
                
                // Limpiar registros de inventario anteriores a hoy
                await supabase
                    .from('inventario_diario')
                    .delete()
                    .lt('fecha', hoy);
                
                console.log('Limpieza autom√°tica completada');
            } catch (error) {
                console.error('Error en limpieza autom√°tica:', error);
            }
        }
    </script>
</body>
</html>
